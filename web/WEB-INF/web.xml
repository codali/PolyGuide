<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginValidator</servlet-name>
        <servlet-class>com.ipt.LoginValidator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestSer</servlet-name>
        <servlet-class>com.ipt.TestSer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>topicSubmit</servlet-name>
        <servlet-class>com.ipt.topicSubmit</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginValidator</servlet-name>
        <url-pattern>/LoginValidator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestSer</servlet-name>
        <url-pattern>/TestSer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>topicSubmit</servlet-name>
        <url-pattern>/topicSubmit</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
        /home/musthafa/Documents/tmp_DOCS/
    </param-value>
    </context-param>
</web-app>
